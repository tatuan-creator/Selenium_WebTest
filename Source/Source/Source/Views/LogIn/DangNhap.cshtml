@model Source.Models.TK

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/layoutAdmin/css/styles.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
</head>
<body style="background-size:cover; background-image: url(../../../../Content/images/R.jpg)">
    <div class="container">
        <div class="row justify-content-center" style="margin-top:50px">
            <div class="col-lg-6" style="opacity:0.9">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight my-4" style="color:red">ĐĂNG NHẬP HỆ THỐNG QUẢN LÝ SINH VIÊN</h3></div>
                    <div class="card-body">

                        @using (Html.BeginForm("DangNhap", "LogIn", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label class="small mb-1" for="inputEmailAddress">Tài khoản</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control py-4", placeholder = "Nhập Email" } })
                                        @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="small mb-1" for="inputEmailAddress">Mật khẩu</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control py-4", placeholder = "Nhập Mật khẩu", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="small" href="password">Quên mật khẩu?</a>
                                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                        <div style="color:red">
                            @ViewBag.Fail
                        </div>
                        <div style="color:green">
                            @ViewBag.Success
                        </div>
                        @*<div>
            <a class="nav-link" href="@Url.Action("Index", "HoiDaps")"> Trang chủ</a>
        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/layoutAdmin/js/scripts.js"></script>

</body>
</html>
